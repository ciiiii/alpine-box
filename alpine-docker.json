{
  "variables": {
    "disk_size": "8192",
    "version": "311",
    "iso_url": "https://mirrors.tuna.tsinghua.edu.cn/alpine/v3.11/releases/x86_64/alpine-virt-3.11.4-x86_64.iso",
    "iso_checksum": "45e208c6b60032c52e97f43fef9c471c9948367039f017b69607b54e7d73e76d",
    "iso_checksum_type": "sha256"
  },
  "builders": [
    {
      "name": "alpine",
      "type": "virtualbox-iso",
      "guest_os_type": "Linux26_64",
      "guest_additions_mode": "disable",
      "headless": true,
      "http_directory": "./http",
      "vboxmanage": [
        ["modifyvm","{{.Name}}","--cpus","1"],
        ["modifyvm","{{.Name}}","--memory","1024"],
        ["modifyvm","{{.Name}}","--vram", "32"],
        ["modifyvm","{{.Name}}","--cableconnected1","on"],
        ["modifyvm","{{.Name}}","--audio","none"],
        ["modifyvm","{{.Name}}","--usb","off"]
      ],
      "disk_size": "{{user `disk_size`}}",
      "hard_drive_interface": "sata",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "ssh_username": "root",
      "ssh_password": "vagrant",
      "ssh_wait_timeout": "10m",
      "boot_wait": "20s",
      "boot_command": [
        "root<enter><wait>",
        "ifconfig eth0 up && udhcpc -i eth0<enter><wait>",
        "wget -O /tmp/answers http://{{ .HTTPIP }}:{{ .HTTPPort }}/answers<enter><wait>",
        "setup-alpine -f /tmp/answers<enter><wait5>",
        "vagrant<enter><wait>",
        "vagrant<enter><wait>",
        "<wait10><wait10>",
        "y<enter>",
        "<wait10><wait10>",
        "<wait10><wait10>",
        "<wait10><wait10>",
        "mount /dev/vg0/lv_root /mnt<enter>",
        "echo 'PermitRootLogin yes' >> /mnt/etc/ssh/sshd_config<enter>",
        "reboot<enter>"
      ],
      "shutdown_command": "/sbin/poweroff"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} /bin/sh {{.Path}}",
      "scripts": [
        "./scripts/provision.sh",
        "./scripts/docker.sh",
        "./scripts/clean.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "./dist/{{.BuildName}}-{{user `version`}}-docker.box",
      "vagrantfile_template": "Vagrantfile.template"
    }
  ]
}
